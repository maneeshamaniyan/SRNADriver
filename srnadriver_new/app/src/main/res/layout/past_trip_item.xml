<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/btn_black_submit"
    android:backgroundTint="@color/white"
    android:elevation="@dimen/_10sdp"
    android:src="@drawable/ic_menu"
    android:textAllCaps="false"
    android:textColor="@color/white"
    android:textSize="@dimen/_10ssp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toStartOf="@+id/btncurrent"
        >
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/circular_car_icon"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_10sdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Accept"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/app_color"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="@dimen/_3sdp"
                android:gravity="left"
                android:text="07:00 PM"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/_9ssp"
                 />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btncurrent"
        android:layout_width="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="@dimen/_15sdp"
        android:background="@drawable/black_with_boarder"
        android:layout_marginEnd="@dimen/_10sdp"
     >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/trip_amount"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="145 AED"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Trip Fare"
            android:layout_gravity="center"

            android:textSize="@dimen/_8ssp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
             />
    </LinearLayout>


</RelativeLayout>