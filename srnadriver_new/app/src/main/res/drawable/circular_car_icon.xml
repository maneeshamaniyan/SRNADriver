<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        >
        <shape android:shape="oval">
            <corners
                android:radius="3dp"/>
            <solid
                android:color="@color/text_yellow_02"/>
            <stroke
                android:color="@color/app_color"
                android:width="1dp"/>
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
    </item>
    <item
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp">

        <bitmap
            android:src="@drawable/ic_rides_selected"
            android:gravity="center" />
    </item>
</layer-list>